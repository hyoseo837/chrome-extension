{
    "name": "keep Orbt",
    "description" :"Base Level Extension",
    "version" : "1.0",
    "manifest_version": 3,
    "options_page" : "options.html",

    "background" : {
        "service_worker" : "background.js"
    },

    "permissions": [
        "storage"
    ],

    "action":{
        "default_popup" : "popup.html",
        "default_icon"  : {
          "16": "/image/orbit_icon.png",
          "32": "/image/orbit_icon.png",
          "48": "/image/orbit_icon.png",
          "128": "/image/orbit_icon.png"
        }
    },

    "icons" : {
        "16": "/image/orbit_icon.png",
        "32": "/image/orbit_icon.png",
        "48": "/image/orbit_icon.png",
        "128": "/image/orbit_icon.png"
    }

} 


